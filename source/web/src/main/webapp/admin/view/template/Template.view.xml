<mvc:View controllerName="cardies.adminapp.controller.template.Template" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" busyIndicatorDelay="0">
	<SplitContainer id="SplitContDemo" initialDetail="detail" initialMaster="master" >
		<masterPages>
			<Page id="master" title="{i18n>Template.title.masterlist}" class="sapUiStdPage" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<List itemPress="onListItemPress" items="{path: '/value'}">
						<items>
							<StandardListItem title="{Name}" type="Active" custom:template="{ID}" press="onTemplateSelect" />
						</items>
					</List>
				</content>
				<footer>
					<OverflowToolbar id="someFooter">
						<ToolbarSpacer />
						<OverflowToolbarButton text="Add" icon="sap-icon://add" press="onCreatePress" />
					</OverflowToolbar>
				</footer>
			</Page>
		</masterPages>
		<detailPages>
			<Page id="detail" showHeader="true" visible="true" title="{Template>/Name}">
				<content>
					<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" selectedKey="0">
						<items>
							<IconTabFilter icon="sap-icon://hint">
								<core:Fragment fragmentName="cardies.adminapp.view.template.TemplateInfo" type="XML" />
							</IconTabFilter>
							<IconTabFilter icon="sap-icon://document">
								<core:Fragment fragmentName="cardies.adminapp.view.template.TemplateFileResource" type="XML" />
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Bar>
						<contentRight>
							<Button id="edit" text="{i18n>Label.Edit}" type="Emphasized" visible="{path: 'stateModel>/editState', formatter: '.disableControl'}" press="onEditPress" />
							<Button id="delete" text="{i18n>Label.Delete}" type="Reject" visible="{path: 'stateModel>/editState', formatter: '.disableControl'}" press="onDeletePress" />
							<Button id="save" text="{i18n>Label.Save}" type="Emphasized" visible="{path: 'stateModel>/editState', formatter: '.enableControl'}" press="onSavePress" />
							<Button id="cancel" text="{i18n>Label.Cancel}" type="Reject" visible="{path: 'stateModel>/editState', formatter: '.enableControl'}" press="onCancelPress" />
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</detailPages>
	</SplitContainer>
</mvc:View>
