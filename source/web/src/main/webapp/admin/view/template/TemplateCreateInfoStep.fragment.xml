<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<form:SimpleForm editable="true">
		<form:content>
			<Label text="{i18n>Template.name}" required="true" />
			<Input value="{/Template/Name}" valueStateText="{i18n>Template.name.size}" valueState="{/TemplateNameState}" id="TemplateName" liveChange="templateInfoValidation" placeholder="{i18n>Template.name.size}" />
			<Label text="{i18n>Template.description}" required="false" />
			<Input value="{/Template/Description}" valueStateText="{i18n>Template.description.size}" valueState="{/TemplateDescriptionState}" id="TemplateDescription" liveChange="templateInfoValidation" placeholder="{i18n>Template.description.size}" />
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>